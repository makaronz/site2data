{
  "openapi": "3.0.0",
  "info": {
    "title": "Script Analysis API",
    "version": "1.0.0",
    "description": "API do analizy skryptów PDF i TXT"
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "Development server"
    }
  ],
  "paths": {
    "/api/script/analyze": {
      "post": {
        "summary": "Analiza skryptu",
        "description": "Przesyła plik do analizy",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "script": {
                    "type": "string",
                    "format": "binary"
                  },
                  "type": {
                    "type": "string",
                    "enum": ["pdf", "txt"]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Plik został pomyślnie przesłany",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Nieprawidłowe dane wejściowe"
          },
          "429": {
            "description": "Zbyt wiele żądań"
          }
        }
      }
    },
    "/api/upload-pdf": {
      "post": {
        "summary": "Przesyłanie i analiza pliku PDF",
        "description": "Przesyła plik PDF do analizy i zwraca wyodrębniony tekst.",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "pdf": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Plik PDF został pomyślnie przeanalizowany",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "text": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Nie przesłano pliku PDF lub błąd przetwarzania"
          },
          "500": {
            "description": "Błąd serwera podczas przetwarzania PDF"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
} 