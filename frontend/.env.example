# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_SOCKET_URL=http://localhost:5000

# Authentication
REACT_APP_AUTH_STORAGE_KEY=film_production_assistant_auth

# Feature Flags
REACT_APP_ENABLE_WEATHER_INTEGRATION=true
REACT_APP_ENABLE_AI_FEATURES=true
REACT_APP_ENABLE_OFFLINE_MODE=true

# External Services
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
REACT_APP_WEATHER_API_KEY=your_weather_api_key

# File Upload
REACT_APP_MAX_UPLOAD_SIZE=50000000 # 50MB in bytes
REACT_APP_ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,txt,jpg,jpeg,png,mp4,mov

# Analytics
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ANALYTICS_KEY=your_analytics_key

# Development
REACT_APP_DEBUG_MODE=false 